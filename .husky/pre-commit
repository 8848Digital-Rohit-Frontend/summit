#!/bin/bash

# Get the list of staged files
staged_files=$(git diff --cached --name-only)

# Iterate over each staged file
for file in $staged_files; do
    # Check if the file contains console.log or console.error
    if grep -qE 'console\.(log|error)' "$file"; then
        echo "Error: Found 'console.log' or 'console.error' in file: $file"
        echo "Please remove all 'console.log' and 'console.error' statements before committing."
        exit 1
    fi
done

# If no occurrences found, allow the commit
exit 0